<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>

<%= f.text_field :first_name %>
<%= f.text_field :last_name %>
<%= f.text_field :first_name_kana %>
<%= f.text_field :last_name_kananame %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <%= f.text_field :postal_code %>
  <%= f.text_field :address %>
  <%= f.text_field :telephone_number %>

  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
  
  <%= link_to "こちら" , new_customer_session_path   %>
<% end %>
