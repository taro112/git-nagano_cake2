<h2 class ="title">配送先登録/一覧</h2>

<%= form_with model: @address, url: addresses_path, local: true do |f| %>

<table>
  <tr>
    <th>郵便番号</th> 
    <th></th>
    <th><%= f.text_field :postal_code %></th>
  </tr>
  <tr>
      <th>住所</th>
      <th></th>
      <th><%= f.text_field :address %></th>
  </tr>
  <tr>
      <th>宛名</th>
      <th></th>
      <th><%= f.text_field :name %></th>
      <th></th>
      <th><%= f.submit '新規登録' %></th>
  </tr>
  <% end %>
  </table>

<% @addresses.each do |address| %>
<table>
  <tr>
    <th>郵便番号</th> 
    <th></th>
    <th>住所</th>
    <th></th>
    <th>宛名</th>
    <th></th>
    <th></th>
  </tr>
  <tr>
    <td><%= address.postal_code %></td>
    <td></td>
    <td><%= address.address %></td>
    <td></td>
    <td><%= address.name %></td>
    <td></td>
    <td><%= link_to "編集する", edit_address_path(address.id) %></td>
    <td></td>
    <td><%= link_to "削除する", address_path(address.id), method: :delete %></td>
  </tr>
<% end %>
</table>
