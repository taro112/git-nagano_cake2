<%= form_with model: resource, url: customer_registration_path, local: true do |f| %>

<h2>新規会員登録</h2>

  

<table class="registrations_table_table-borderless">
  <%= render "customers/shared/error_messages", resource: resource %>
  <thead>
    <tr>
      <th>名前</th>
      <th>（姓）<%= f.text_field :first_name %></th>
      <th>（名）<%= f.text_field :last_name %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>フリガナ</th>
      <td>（セイ）<%= f.text_field :first_name_kana %></td>
      <td>（メイ）<%= f.text_field :last_name_kana%></td>
    </tr>
     <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      <td></td>
    </tr>
    <tr>
      <th>郵便番号（ハイフンなし）</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号（ハイフンなし）</th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th>パスワード（6文字以上）</th>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
     <tr>
      <th>パスワード（確認用）</th>
      <td> <%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "新規登録" %></td>
    </tr>
  </tbody>
</table>

<h2 class= "registrations">既に登録済みの方</h2>
<p class ="registrations_link"><%= link_to "こちら" , new_customer_session_path   %> からログインしてください。</p>
<% end %>
