<div class="main">
    <h1>ジャンル編集</h1>

    <%= form_with model:@genre, url:"/admin/genres/#{@genre.id}", local:true do |f| %>

    <p class="genre_letter">ジャンル名</p>
    <div class="genre_file"><%= f.text_field :name %></div>
    <div class="genre_register"><%= f.submit '変更を保存' %></div>
    <% end %>
</div>
    
