<div class="main">
    <h1>ジャンル一覧・追加</h1>
        <div class="genre_form">
            <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
            <p class="letter">ジャンル名</p>
            <div class="file"><%= f.text_field :name %></div>
            <div class="register"><%= f.submit '新規登録' %></div>
            <% end %> 
        </div>
    </div>      

    <div class="foot">
        <p class="title">ジャンル</p>
        <div class="box">
            <% @genres.each do |genre| %>
            <div class="name"><%= genre.name %></div>
            <div class="edit"><%= link_to "編集する", edit_admin_genre_path(genre.id) %></div>
            <% end %> 
        </div>
    </div>