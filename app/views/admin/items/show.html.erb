
<h2 class ="title">商品詳細</h2>
<div class="container">
  <div class="row">
  
      <div class="col-md-4">
        <%= attachment_image_tag @item, :image,:fill, 220, 220 %>
        </div>
        <div class="col-md-8">
        <table class="table_table_borderless">
          <thead>
            <tr>
              <th>商品名</th>
              <th><%= @item.name %></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th>商品説明</th>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <th>
                  税込価格
                 （税抜価格）
              </th>
              <td>
                <%= @item.with_tax_price %>
                （<%= @item.price %>）円
              </td>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <td>
                <% if @item.is_active == true %>
                  <p>販売中</p>
            　   <% else %>
                  <p>販売停止中</p>
            　   <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      
  </div>    
</div>
<%# end %>
<div class = "admin_item">
  <%= link_to "編集する", edit_admin_item_path(@item.id) %>
</div>

