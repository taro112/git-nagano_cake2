<div class="head">
        <p class="surround">商品新規登録</p>
</div>

<%= form_with model: @item, url: admin_items_path, method: :post, local:true do |f| %>
<div class="main">
    <div class="image">
        <p class="letter">商品画像</p>
        <div class="file"><%= f.attachment_field :image %></div>
    </div>
    <div class="item_name">
        <p class="letter">商品名</p>
        <div class="file"><%= f.text_field :name %></div>
    </div>
    <div class="explanation">
        <p class="letter">商品説明</p>
        <div class="file"><%= f.text_area :introduction %></div>
    </div>
    <div class="genre">
        <p class="letter">ジャンル</p>
        <div class="file">
            
            <%= f.collection_select :genre_id, Genre.all, :id, :name %></div>
    </div>
    <div class="tax_excluded">
        <p class="letter">税抜価額</p>
        <div class="file"><%= f.text_field :price %></div>
    </div>
    <div class="status">
        <p class="letter">販売ステータス</p>
        <div class="button">
            
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
            
        </div>
    </div>
    <div class="register"><%= f.submit '新規登録' %></div>
</div>
<% end %>