<%= form_with model:@customer, url:admin_customer_path(@customer.id), local:true do |f| %>
    <h2><%= @customer.first_name + @customer.last_name %>さんの会員情報編集</h2>
    <table class="table table-borderless">
  <thead>
    <tr>
      <th>会員ID</th>
      <th></th>
      <th><%= @customer.id %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>氏名</th>
      <td><%= f.text_field :first_name %></td>
      <td><%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :first_name_kana %></td>
      <td><%= f.text_field :last_name_kana %></td>
    </tr>
    <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
        <td></td>
    </tr>
    <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
        <td></td>
    </tr>
    <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number %></td>
        <td></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
        <td></td>
    </tr>
    <tr>
        <th>会員ステータス</th>
        
        <td>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", {value: :true, style: "display: inline-block;"} %>
        </td>
        <td>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_deleted, "退会", {value: :false, style: "display: inline-block;"} %>
        </td>
    </tr>
    <tr>
        <th><%= f.submit '変更を保存' %></th>
        <% end %>
    </tr>
  </tbody>
</table>









            
            


