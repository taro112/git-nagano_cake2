<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if customer_signed_in? %>
    <div class="header">

        <nav>
            <ul class="nav-list">
                <li class="nav-list-item">About</li>
                <li class="nav-list-item">商品一覧</li>
                <li class="nav-list-item">新規登録</li>
                <li class="nav-list-item">ログイン</li>  
            </ul>
        </nav>
        <h1 class="logo">LOGO</h1>
    </div>
    <% elsif admin_signed_in? %>
    <div class="header">

        <nav>
            <ul class="nav-list">
                <li class="nav-list-item">商品一覧</li>
                <li class="nav-list-item">会員一覧</li>
                <li class="nav-list-item">注文履歴一覧</li>
                <li class="nav-list-item">ジャンル一覧</li>
                <li class="nav-list-item">ログアウト</li>  
            </ul>
        </nav>
        <h1 class="logo">LOGO</h1>
    </div>
    <% else %>
    <div class="header">

        <nav>
            <ul class="nav-list">
                <li class="nav-list-item">About</li>
                <li class="nav-list-item">商品一覧</li>
                <li class="nav-list-item">新規登録</li>
                <li class="nav-list-item">ログイン</li>  
            </ul>
        </nav>
        <h1 class="logo">LOGO</h1>
    </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
